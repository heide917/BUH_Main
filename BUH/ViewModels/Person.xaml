<Window x:Class="BUH.ViewModels.Person"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUH.ViewModels"
        mc:Ignorable="d"
        
        Title="МОЛ" Height="450" Width="500">
    <Grid>
        
      
        
            <DataGrid Width="485" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
    RowBackground="LightGray" AlternatingRowBackground="White" Margin="0,195,-8,14">



            <DataGrid.Items>

            </DataGrid.Items>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Path=FullName}" Width="250" FontSize="18" FontFamily="Times New Roman" />
                <DataGridTextColumn Header="Отдел" Binding="{Binding Path=Department}" Width="100"  FontSize="18" FontFamily="Times New Roman" />
                <DataGridTextColumn Header="Должность" Binding="{Binding Path=Position}" Width="100"  FontSize="18" FontFamily="Times New Roman" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel>
            
        </StackPanel>

    </Grid>
</Window>
